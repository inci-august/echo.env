{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "watch",
      "dependsOn": ["npm: watch:tsc", "npm: watch:esbuild"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [
        "$tsc-watch",
        {
          "owner": "esbuild",
          "pattern": [
            {
              "regexp": "^\\[watch\\] build finished, watching for changes\\.\\.\\.$",
              "file": 1,
              "line": 2,
              "column": 3,
              "message": 4
            }
          ],
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^\\[watch\\] build started",
            "endsPattern": "^\\[watch\\] build finished"
          }
        }
      ],
      "isBackground": true
    },
    {
      "type": "npm",
      "script": "watch:esbuild",
      "group": "build",
      "isBackground": true,
      "label": "npm: watch:esbuild",
      "presentation": {
        "reveal": "never",
        "group": "watch"
      }
    },
    {
      "type": "npm",
      "script": "watch:tsc",
      "group": "build",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "label": "npm: watch:tsc",
      "presentation": {
        "reveal": "never",
        "group": "watch"
      }
    },
    {
      "type": "npm",
      "script": "watch-tests",
      "problemMatcher": ["$tsc-watch"],
      "isBackground": true,
      "presentation": {
        "reveal": "never",
        "group": "watchers"
      },
      "group": "build"
    },
    {
      "label": "tasks: watch-tests",
      "dependsOn": ["npm: watch", "npm: watch-tests"],
      "problemMatcher": []
    }
  ]
}
